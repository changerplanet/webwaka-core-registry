{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://webwaka.io/schemas/module_manifest.schema.json",
  "title": "WebWaka Module Manifest",
  "description": "Schema for WebWaka module manifest files",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "moduleId",
    "name",
    "version",
    "class",
    "description",
    "capabilities",
    "dependencies",
    "metadata"
  ],
  "properties": {
    "moduleId": {
      "type": "string",
      "pattern": "^webwaka-(core|suite|industry|ext|infra)-[a-z0-9-]+$",
      "description": "Unique module identifier following WebWaka naming convention"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Human-readable module name"
    },
    "version": {
      "type": "string",
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$",
      "description": "Semantic version (semver 2.0.0)"
    },
    "class": {
      "type": "string",
      "enum": ["core", "suite", "industry", "ext", "infra"],
      "description": "Module classification"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 500,
      "description": "Brief description of the module's purpose"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$",
            "minLength": 3,
            "maxLength": 64,
            "description": "Globally unique capability identifier"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100,
            "description": "Human-readable capability name"
          },
          "description": {
            "type": "string",
            "minLength": 10,
            "maxLength": 500,
            "description": "Description of what this capability provides"
          },
          "version": {
            "type": "string",
            "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$",
            "description": "Capability API version (major.minor)"
          }
        }
      },
      "description": "List of capabilities this module provides"
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["moduleId"],
        "properties": {
          "moduleId": {
            "type": "string",
            "pattern": "^webwaka-(core|suite|industry|ext|infra)-[a-z0-9-]+$",
            "description": "ID of the required module"
          },
          "version": {
            "type": "string",
            "description": "Semver version range (e.g., ^1.0.0, >=2.0.0)"
          },
          "capabilities": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^[a-z][a-z0-9-]*[a-z0-9]$"
            },
            "description": "Specific capabilities required from this dependency"
          },
          "optional": {
            "type": "boolean",
            "default": false,
            "description": "Whether this dependency is optional"
          }
        }
      },
      "description": "List of module dependencies"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["maintainers", "license"],
      "properties": {
        "maintainers": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": ["name", "email"],
            "properties": {
              "name": {
                "type": "string",
                "minLength": 1,
                "description": "Maintainer name"
              },
              "email": {
                "type": "string",
                "format": "email",
                "description": "Maintainer email"
              },
              "role": {
                "type": "string",
                "enum": ["owner", "maintainer", "contributor"],
                "default": "maintainer",
                "description": "Role of this maintainer"
              }
            }
          },
          "description": "List of module maintainers"
        },
        "license": {
          "type": "string",
          "description": "SPDX license identifier"
        },
        "repository": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "url"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["git"],
              "description": "Repository type"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "Repository URL"
            }
          },
          "description": "Source repository information"
        },
        "keywords": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "description": "Keywords for discovery"
        },
        "homepage": {
          "type": "string",
          "format": "uri",
          "description": "Module homepage URL"
        },
        "documentation": {
          "type": "string",
          "format": "uri",
          "description": "Documentation URL"
        }
      },
      "description": "Module metadata"
    }
  }
}
